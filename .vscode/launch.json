{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backup (no args)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["backup"],
            "console": "integratedTerminal"
        },
        {
            "name": "Continuous",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            // "args": ["backup", "continuous", "--interval", "5s"],
            "args": ["backup", "continuous"],
            "console": "integratedTerminal"
        },
    ],
}